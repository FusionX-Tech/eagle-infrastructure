# Production Environment Configuration for Keycloak
KEYCLOAK_REALM=eagle-prod
KEYCLOAK_ISSUER_URI=https://keycloak.fusionx.pro/realms/eagle-prod
KEYCLOAK_AUTH_SERVER_URL=https://keycloak.fusionx.pro

# Service Account Credentials - Production (Use secure secrets management)
MS_CUSTOMER_CLIENT_ID=ms-customer
MS_CUSTOMER_CLIENT_SECRET=${MS_CUSTOMER_CLIENT_SECRET}

MS_ALERT_CLIENT_ID=ms-alert
MS_ALERT_CLIENT_SECRET=${MS_ALERT_CLIENT_SECRET}

MS_ENRICHMENT_CLIENT_ID=ms-enrichment
MS_ENRICHMENT_CLIENT_SECRET=${MS_ENRICHMENT_CLIENT_SECRET}

MS_ORCHESTRATOR_CLIENT_ID=ms-orchestrator
MS_ORCHESTRATOR_CLIENT_SECRET=${MS_ORCHESTRATOR_CLIENT_SECRET}

# Token Configuration - More restrictive for production
ACCESS_TOKEN_LIFESPAN=180
REFRESH_TOKEN_LIFESPAN=900
SSO_SESSION_IDLE_TIMEOUT=900
SSO_SESSION_MAX_LIFESPAN=14400

# Security Configuration - Enhanced for production
BRUTE_FORCE_PROTECTED=true
SSL_REQUIRED=all
DEFAULT_SIGNATURE_ALGORITHM=RS256
PERMANENT_LOCKOUT=false
MAX_FAILURE_WAIT_SECONDS=1800
FAILURE_FACTOR=15