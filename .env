# Eagle Infrastructure Environment Variables
# Baseado nos princípios de Separação de Responsabilidades

# =============================================================================
# POSTGRES INFRASTRUCTURE (Keycloak, Kong, etc.)
# =============================================================================
POSTGRES_PORT=5432
POSTGRES_USER=fusionx
POSTGRES_PASSWORD=senha
POSTGRES_DB=eagle

# Postgres Replication
POSTGRES_REPLICATION_USER=replicator
POSTGRES_REPLICATION_PASSWORD=repl_password

# =============================================================================
# PGADMIN
# =============================================================================
PGADMIN_DEFAULT_EMAIL=admin@fusionx.pro
PGADMIN_DEFAULT_PASSWORD=admin123
PGADMIN_PORT=5050

# =============================================================================
# KEYCLOAK
# =============================================================================
KEYCLOAK_VERSION=25.0.1
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin
KEYCLOAK_ISSUER_URI=http://keycloak:8080/realms/eagle

# =============================================================================
# REDIS CLUSTER
# =============================================================================
REDIS_HOST=redis-master
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_REPLICA_HOST=redis-replica
REDIS_REPLICA_PORT=6380

# Cache TTL Configuration (in seconds)
CACHE_ALERT_TTL=300
CACHE_CUSTOMER_TTL=600
CACHE_EXTERNAL_DATA_TTL=1800
CACHE_STATISTICS_TTL=900

# Cache Size Configuration
CACHE_ALERT_MAX_SIZE=1000
CACHE_CUSTOMER_MAX_SIZE=500
CACHE_EXTERNAL_DATA_MAX_SIZE=200
CACHE_STATISTICS_MAX_SIZE=100

# =============================================================================
# HASHICORP VAULT
# =============================================================================
VAULT_ROOT_TOKEN=myroot
VAULT_ADDR=http://localhost:8200
VAULT_API_ADDR=http://localhost:8200

# =============================================================================
# AWS LOCALSTACK
# =============================================================================
AWS_REGION=us-east-1

# Filas e tópicos
EAGLE_ALERT_QUEUE_NAME=eagle-alerts
EAGLE_ENRICHMENT_QUEUE_NAME=eagle-enrichment
EAGLE_DLQ_NAME=eagle-alerts-dlq
EAGLE_TOPIC_NAME=eagle-topic

# URLs internas (containers acessam via nome do serviço)
EAGLE_ALERT_QUEUE_URL=http://localstack:4566/000000000000/${EAGLE_ALERT_QUEUE_NAME}
EAGLE_ENRICHMENT_QUEUE_URL=http://localstack:4566/000000000000/${EAGLE_ENRICHMENT_QUEUE_NAME}

# =============================================================================
# MONITORING
# =============================================================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# =============================================================================
# PACT BROKER
# =============================================================================
PACT_BROKER_URL=http://localhost:9292
PACT_BROKER_USERNAME=pact_user
PACT_BROKER_PASSWORD=pact_secure_password_2024
PACT_BROKER_READ_ONLY_USERNAME=pact_reader
PACT_BROKER_READ_ONLY_PASSWORD=pact_reader_password_2024
PACT_BROKER_TOKEN=pact_token_secure_2024

# =============================================================================
# MINIO (Object Storage)
# =============================================================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_ENDPOINT=http://localhost:9000
MINIO_CONSOLE_URL=http://localhost:9001
MINIO_SERVICE_USER=eagle-service
MINIO_SERVICE_PASSWORD=eagle-service-password

# MinIO Buckets
MINIO_BUCKET_ALERTS=eagle-alerts
MINIO_BUCKET_ATTACHMENTS=eagle-attachments
MINIO_BUCKET_REPORTS=eagle-reports

# =============================================================================
# TIMEZONE
# =============================================================================
TZ=America/Sao_Paulo